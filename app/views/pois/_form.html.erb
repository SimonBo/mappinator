<%= form_for @poi do |f| %>
  <% if @poi.errors.any? %>
    <div id='error_explanation'>
      <%= render 'errors' %>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='field'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class='field'>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
  <div class='actions'>
    <%= f.submit 'Save' %>
  </div>
<% end %>
